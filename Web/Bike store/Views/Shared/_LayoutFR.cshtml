                            string[] path = Convert.ToString(@Context.Request.Path).Split('/');
                            string controller = "Home";
                            @*string controllerFR = "HomeFR";*@

                            string action = "Index";
                            string actionFR = "IndexFR";
                            string productModel = "1";

