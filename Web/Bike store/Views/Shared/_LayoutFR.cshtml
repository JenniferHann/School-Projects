                                controller = path[1];
                                action = path[2];
                            }
                            else if (path.Length == details)
                            {
                                controller = path[1];
                                productModel = path[3];
                                action = path[2] + "/" + productModel;
                            }

                            action = action.Replace("FR", "");
                            actionFR = action + "FR";
                            @*controller = controller.Replace("FR", "");
            controllerFR = controller + "FR";*@

