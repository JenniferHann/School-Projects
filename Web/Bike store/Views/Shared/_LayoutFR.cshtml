                            string hrefEN = "/Home";

                            int mainPage = 2;
                            int allProducts = 3;
                            int details = 4;

                            if (path.Length == mainPage)
                            {
                                if (path[1] != "")
                                {
                                    controller = path[1];
                                }
                            }
                            else if (path.Length == allProducts)
