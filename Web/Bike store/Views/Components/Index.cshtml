@model ReflectionIT.Mvc.Paging.PagingList<NoNameBikes.Models.ProductCategory>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Components";
}

<style>

    .components {
        border-top: solid;
        border-top-color: gray;
    }

    div {
        text-align: center;
        font-size: large;
    }

    img {
        border: solid;
        padding: 20px;
        margin: 25px;
    }

    #actionLink:link, #actionLink:visited {
        border-style: solid;
        border-color: black;
        color: black;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    #actionLink:hover, #actionLink:active {
        text-decoration: underline;
    }

    table {
        margin-left: auto;
        margin-right: auto;
    }

    #sorts {
        margin-left: auto;
        margin-right: auto;
    }

    #sortAsc {
        color: black;
        border: solid;
        padding: 10px;
        margin: 10px;
    }

    #sortDesc {
        text-align: right;
        color: black;
        border: solid;
        padding: 10px;
        margin: 10px;
    }

    #sortRow {
        border-bottom: none;
    }

    a {
        color: black;
    }

        a:hover, a:active {
            color: white;
            background-color: #bfbfbf;
            padding: 5px;
            text-decoration: none;
        }

    .paging {
        padding-left: 50%;
    }
</style>

<div>
    <h1>Components</h1>
    @*<br />*@
    @*<img class="img" src="~/images/bike_gears.jpg" alt="bike gears picture" width="500px" height="300px" />*@
    <br />
    <br />

    <table id="sorts">
        <tr id="sortRow">
            <td>@Html.ActionLink("Sort Descending", "Index", new { sortOrder = ViewBag.NameSortDParm }, new { id = "sortDesc" })</td>
            <td>@Html.ActionLink("Sort Ascending", "Index", new { sortOrder = ViewBag.NameSortAParm }, new { id = "sortAsc" })</td>
        </tr>
    </table>

    <br />

    <table>
        @{
            foreach (var item in Model)
            {
                <tr class="components">
                    <td>
                        @{
                            bool hasSpace = item.Name.Contains(" ");
                            string name = name = item.Name;
                            if (hasSpace == true)
                            {
                                name = name.Replace(" ", "");
                            }

                            <a href="@Url.Action(name, "Components", null)">
                                @{
                                    switch (item.Name)
                                    {
                                        case "Bottom Brackets":
                                            <img class="img" src="~/images/Components/markus-spiske-bottom-brackets.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Brakes":
                                            <img class="img" src="~/images/Components/markus-spiske-Brakes.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Chains":
                                            <img class="img" src="~/images/Components/vlad-smolyakov-chains.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Cranksets":
                                            <img class="img" src="~/images/Components/crankset.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Derailleurs":
                                            <img class="img" src="~/images/Components/derailleur.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Handlebars":
                                            <img class="img" src="~/images/Components/handlebars.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Mountain Frames":
                                            <img class="img" src="~/images/Components/mountain-frame.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Pedals":
                                            <img class="img" src="~/images/Components/pedal.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Road Frames":
                                            <img class="img" src="~/images/Components/road-frame.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Saddles":
                                            <img class="img" src="~/images/Components/saddles.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                        case "Touring Frames":
                                            <img class="img" src="~/images/Components/touring-frame.jpg" alt="bike gears picture" width="500px" height="300px" />
                                            break;
                                    }
                                }
                            </a>
                        }

                    </td>

                    <td>
                        @{
                            hasSpace = item.Name.Contains(" ");
                            if (hasSpace == true)
                            {
                                name = item.Name;
                                name = name.Replace(" ", "");
                                @Html.ActionLink(item.Name, name, null, null, new { id = "actionLink" })
                            }
                            else
                            {
                                @Html.ActionLink(item.Name, item.Name, null, null, new { id = "actionLink" })
                            }
                        }
                    </td>
                </tr>

            }
        }
    </table>
    <br />
    <nav class="paging">
        <vc:pager paging-list="@Model" />
    </nav>

