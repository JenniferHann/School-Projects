            foreach (var item in Model)
            {
                <hr />
                bool hasSpace = item.Name.Contains(" ");
                if (hasSpace == true)
                {
                    string name = item.Name;
                    name = name.Replace(" ", "");
                    @Html.ActionLink(item.Name, name)
                }
                else
                {
                    @Html.ActionLink(item.Name, item.Name)
                }
            }
        }*@
</div>
